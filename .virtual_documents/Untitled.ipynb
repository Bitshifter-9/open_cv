import cv2
import numpy as np

# 1. Read image
img = cv2.imread("image.jpg")   # your image with shapes

# 2. Convert to grayscale
gray = cv2.cvtColor(img, cv2.COLOR_BGR2GRAY)

# 3. Threshold the image
_, thresh = cv2.threshold(gray, 200, 255, cv2.THRESH_BINARY)

# 4. Find contours
contours, hierarchy = cv2.findContours(
    thresh,
    cv2.RETR_TREE,
    cv2.CHAIN_APPROX_SIMPLE
)

# 5. Loop through contours
for contour in contours:

    # Approximate the contour to reduce points
    approx = cv2.approxPolyDP(
        contour,
        0.01 * cv2.arcLength(contour, True),
        True
    )

    # Count corners
    corners = len(approx)

    # Identify shape
    if corners == 3:
        shape_name = "Triangle"
    elif corners == 4:
        shape_name = "Rectangle"
    elif corners == 5:
        shape_name = "Pentagon"
    elif corners > 5:
        shape_name = "Circle"
    else:
        shape_name = "Unknown"

    # Draw contour
    cv2.drawContours(img, [approx], 0, (0, 255, 0), 2)

    # Get text position
    x = approx.ravel()[0]
    y = approx.ravel()[1] - 10

    # Put shape name
    cv2.putText(
        img,
        shape_name,
        (x, y),
        cv2.FONT_HERSHEY_COMPLEX,
        0.6,
        (0, 0, 255),
        2
    )

# 6. Show output
# cv2.imshow("Contours & Shapes", img)
# cv2.waitKey(0)
# cv2.destroyAllWindows()
plt.imshow(img)




