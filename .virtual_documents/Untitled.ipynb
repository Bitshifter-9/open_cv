import cv2
import numpy as np
import matplotlib.pyplot as plt

im_1 = np.zeros((300,300), dtype="uint8")
im_2 = np.zeros((300,300), dtype="uint8")

circle = cv2.circle(im_1, (150,150), 100, 255, -1)
rect   = cv2.rectangle(im_2, (100,100), (250,250), 255, -1)

bit_and = cv2.bitwise_and(circle, rect)
bit_or  = cv2.bitwise_or(circle, rect)
bit_not = cv2.bitwise_not(circle)

plt.figure(figsize=(10,4))

plt.subplot(1,3,1)
plt.title("AND")
plt.imshow(bit_and, cmap="gray")

plt.subplot(1,3,2)
plt.title("OR")
plt.imshow(bit_or, cmap="gray")

plt.subplot(1,3,3)
plt.title("NOT")
plt.imshow(bit_not, cmap="gray")

plt.show()



